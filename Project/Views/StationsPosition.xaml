<UserControl x:Class="Project.Views.StationsPosition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="Window_SizeChanged">
    <Grid x:Name="stationsGrid" AllowDrop="True"  DragEnter="Border_DragEnter" Drop="Border_Drop">
        <Grid.Background>
            <ImageBrush Opacity="100" ImageSource="../Images/background.jpg" Stretch="Fill"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Canvas x:Name="drawSurface">

        </Canvas>
    </Grid>
</UserControl>
